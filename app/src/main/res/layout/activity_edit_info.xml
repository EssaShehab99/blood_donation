<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".EditInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:theme="@style/MyActionButtonOverflow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairoregular"
                android:text="My information"
                android:textSize="18sp" />
        </Toolbar>
        <EditText
            android:id="@+id/name_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:hint="Name"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_radius"
            android:inputType="textPersonName"
            android:theme="@style/text_style"
            android:textColor="@color/primary"
            android:paddingHorizontal="10dp" />
        <EditText
            android:id="@+id/email_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:hint="Email"
            android:background="@drawable/border_radius"
            android:inputType="textEmailAddress"
            android:theme="@style/text_style"
            android:textColor="@color/primary"
            android:paddingHorizontal="10dp" />
        <EditText
            android:id="@+id/phone_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:hint="Phone"
            android:background="@drawable/border_radius"
            android:inputType="phone"
            android:theme="@style/text_style"
            android:textColor="@color/primary"
            android:paddingHorizontal="10dp" />
        <EditText
            android:id="@+id/age_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:hint="Age"
            android:inputType="number"
            android:background="@drawable/border_radius"
            android:theme="@style/text_style"
            android:textColor="@color/primary"
            android:paddingHorizontal="10dp" />
        <Spinner
            android:id="@+id/blood_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:popupBackground="@color/white"
            android:background="@drawable/spinner_background"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"/>

        <Spinner
            android:id="@+id/city_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:popupBackground="@color/white"
            android:background="@drawable/spinner_background"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"/>
        <CheckBox
            android:id="@+id/has_illnesses_checkbox"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:theme="@style/text_style"
            android:textColor="@color/primary"
            android:text="Has Illnesses?" />
        <TextView
            android:id="@+id/gender_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/text_style"
            android:layout_marginHorizontal="20dp"
            android:text="Select Gender" />
        <RadioGroup
            android:id="@+id/gender_radio_group"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/male_radio_button"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/text_style"
                android:textColor="@color/primary"
                android:text="Male" />

            <RadioButton
                android:id="@+id/female_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/text_style"
                android:textColor="@color/primary"
                android:text="Female" />
        </RadioGroup>
        <EditText
            android:id="@+id/password_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="password"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:autofillHints=""
            android:theme="@style/text_style"
            android:inputType="textPassword"
            android:textColor="@color/primary"
            android:background="@drawable/border_radius"
            android:paddingHorizontal="10dp" />

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:theme="@style/text_style"
            android:layout_marginVertical="10dp"
            android:background="@drawable/border_radius"
            android:text="Edit"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            app:backgroundTint="@color/primary" />
    </LinearLayout>
</ScrollView>